{
  "manifest_version": 3,
  "name": "Offline AI Cache Extension",
  "version": "1.0",
  "description": "Cache et recherche IA offline",

  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "sidePanel"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
